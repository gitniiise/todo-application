            <h2>Unteraufgaben</h2>
            {# Eingabezeile zum Hinzufügen einer neuen Unteraufgabe #}
            <form id="add-subtodo-form" method="POST" action="{{ path('add_subtodo') }}">
                <input type="hidden" id="parent-item-id" name="parentId">
                <input id="new_subtodo" type="text" max="33" min="1" name="new-subtodo-name" placeholder="Neue Unteraufgabe hinzufügen">
                <button type="submit" class="green-bg">+</button>
            </form>
            <div>
                <ul id="subtodo-list">
                </ul>
            </div>
